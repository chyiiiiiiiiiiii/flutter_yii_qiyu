<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ysf_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/ysf_dialog_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="请告知我们具体原因"
            android:textColor="@color/ysf_black_222222"
            android:textSize="@dimen/ysf_text_size_17" />

        <ImageView
            android:id="@+id/ysf_dialog_input_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="6dp"
            android:contentDescription="@null"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ysf_ic_dialog_close" />
    </FrameLayout>

    <include layout="@layout/ysf_include_divider" />

    <EditText
        android:id="@+id/ysf_dialog_input_edit"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/ysf_transparent"
        android:gravity="top"
        android:hint="@string/ysf_message_robot_evaluation_hint"
        android:maxLength="200"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:textColor="@color/ysf_grey_666666"
        android:textColorHint="@color/ysf_grey_999999"
        android:textSize="15sp" />

    <include layout="@layout/ysf_include_divider" />

    <Button
        android:id="@+id/ysf_dialog_input_submit"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:background="@drawable/ysf_btn_blue_bg_selector"
        android:enabled="false"
        android:text="@string/ysf_ok"
        android:gravity="center"
        android:textColor="@color/ysf_white"
        android:textSize="@dimen/ysf_text_size_15" />
</LinearLayout>